<?xml version="1.0" encoding="utf-8"?>
<form>
		<fieldset name="details"
			addfieldpath="/administrator/components/com_jsptickets/models/fields"
		>
			<field name="id"
				type="hidden"
				label="STATUS_ID_LABEL"
				description="STATUS_ID_DESC"
				size="30"
				default="0"
				readonly="true"
				class="readonly"
			/>
			
			<field name="name"
				type="text"
				label="STATUS_TITLE_LABEL"
				description="STATUS_TITLE_DESC"
				class="inputbox"
				size="30"
				required="true"
			/>
			
			<field name="publish"
				type="list"
				default="1"
				label="STATUS_PUBLISH_LABEL"
				description="STATUS_PUBLISH_DESC">
				<option value="0">Unpublished</option>
				<option value="1">Published</option>
			</field>
			
			
